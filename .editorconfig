# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

[*.xml]
indent_size = 4

[*.html]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 4
